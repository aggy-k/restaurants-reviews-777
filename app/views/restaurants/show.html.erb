<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <%= render @restaurant %>

    <%= link_to 'Add review', new_restaurant_review_path(@restaurant), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Upvote', upvote_restaurant_path(@restaurant), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this restaurant', edit_restaurant_path(@restaurant), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <div class="inline-block ml-2">
      <%= button_to 'Delete this restaurant', restaurant_path(@restaurant), method: :delete, data: { confirm: "Are you sure you want to delete this restaurant?" }, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium" %>
    </div>
    <%= link_to 'Back to restaurants', restaurants_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
  </div>


</div>

<div>
  <h1>REVIEWS</h1>
  <% @restaurant.reviews.each do |review| %>
    <p><%= review.content %></p>
    <%= link_to 'Delete review', review_path(review), method: :delete, data: { confirm: 'Delete this review?' }, class: "text-red-500"  %>
  <% end -%>
</div>










